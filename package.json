{
  "name": "eslint-config-jha-react-node",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "npm": ">=9",
    "node": ">=20.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "clean:build": "rm -rf build/",
    "clean:node-modules": "rm -rf node_modules/",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test:lint": "eslint test/eslint-rules.test.ts --report-unused-disable-directives --max-warnings 0",
    "prettier-check": "prettier --check .",
    "prettier": "prettier --write .",
    "signal:serial": "npm run ts-check && npm run lint && npm run prettier-check",
    "signal": "concurrently --names \"TS,LINT,PRETTIER\" -c \"bgBlack.bold,bgRed.bold,bgCyan.bold\" \"npm run ts-check\" \"npm run lint\" \"npm run prettier-check\"",
    "ts-check": "tsc --build",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "8.2.1",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "10.0.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-typescript-sort-keys": "3.3.0",
    "globals": "^15.9.0",
    "husky": "9.1.7",
    "lint-staged": "^14.0.1",
    "prettier": "3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.4.0",
    "vite-plugin-vercel": "9.0.1"
  },
  "overrides": {
    "eslint-plugin-typescript-sort-keys": {
      "eslint": "^9.21.0"
    },
    "@typescript-eslint/experimental-utils": {
      "eslint": "^9.21.0"
    },
    "@typescript-eslint/utils": {
      "eslint": "^9.21.0"
    }
  },
  "lint-staged": {
    "**/*": "prettier --check --ignore-unknown",
    "*.(js|jsx|cjs|ts|tsx)": [
      "eslint --cache --max-warnings=0"
    ]
  }
}
